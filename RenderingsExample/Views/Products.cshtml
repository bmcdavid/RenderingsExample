@model RenderingsExample.Models.ViewModels.Products

@{ 
    Layout = "MasterWithHeader.cshtml";
}
<section class="section">
    <div class="container">
        <!-- todo: implement category selector -->
        <!--
            <nav class="nav-bar nav-bar--center nav-bar--air-bottom">
